{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Locations Formula 1 races have been held",
  "width": "container",
  "height": 450,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/herg0001/FIT3179/main/worldMap.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/herg0001/FIT3179/main/circuits.csv"
      },
      "mark": {
        "type": "circle", 
        "tooltip": {"content": "data"}
      },
      "encoding": {
        "longitude": {"field": "lng", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "races",
          "type": "quantitative",
          "scale": {"domain": [1, 57]}
        },
        "color": {
          "field": "country",
          "type": "nominal"},
          "tooltip": [
            {
                "field": "name",
                "type": "nominal",
                "title": "Circuit Name"
            },
            {
                "field": "location",
                "type": "nominal",
                "title": "Location"
            },
            {
                "field": "country",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "races",
                "type": "quantitative",
                "title": "Number of Races Held"
            }
        ]  
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    },
    "axis": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "legend": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "header": {
      "labelFont": "Oxygen",
      "titleFont": "Oxygen"
    },
    "title": {
      "font": "Oxygen",
      "fontSize": 16,
      "fontWeight": 600
    }
  }
}